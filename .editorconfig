# -*- coding: utf-8 -*-

# EditorConfig is awesome: https://EditorConfig.org

# Treat this as top-most EditorConfig file? No!
# Because 'root' is not true, because it's commented out.
# root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4

# reStructuredText
[{*.rst,*.rst.txt}]
indent_size = 3
max_line_length = 80


# Markdown
[*.md]
indent_size = 3
max_line_length = 80


[Dockerfile]
indent_size = 4


[Makefile]
indent_size = 4
indent_style = tab


[*.{py,c,cpp,h}]
indent_size = 4


[*.yml]
indent_size = 2
